@using MVCKUTUPHANE.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBL_UYE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/kutuphaneLayout.cshtml";
}

<h2>ÜYE LİSTESİ</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">AD</th>
            <th scope="col">SOYAD</th>
            <th scope="col">MAIL</th>
            <th scope="col">KULLANICI AD</th>
            <th scope="col">ŞİFRE</th>
            <th scope="col">TELEFON</th>
            <th scope="col">OKUL</th>
            <th scope="col">GÜNCELLE</th>
            <th scope="col">ŞİFRE</th>
            <th scope="col">DETAY</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var x in Model)
        {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>@x.SOYAD</td>
            <td>@x.MAIL</td>
            <td>@x.KULLANICIADI</td>
            <td>@x.SIFRE</td>
            <td>@x.TELEFON</td>
            <td>@x.OKUL</td>
            <td><a href="/uye/uyeVeriGetir/@x.ID" class="btn btn-success">GÜNCELLE</a></td>
            <td><a href="/uye/uyeSil/@x.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/uye/uyeGecmis/@x.ID" class="btn btn-default" style="background-color:salmon; color:white;">KİTAP GEÇMİŞİ</a></td>
        </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa}))
<a href="/uye/uyeEkle" class="btn btn-primary">ÜYE EKLE</a>

