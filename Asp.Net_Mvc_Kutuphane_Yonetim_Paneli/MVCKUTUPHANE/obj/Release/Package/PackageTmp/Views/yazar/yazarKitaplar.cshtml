@using MVCKUTUPHANE.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "yazarKitaplar";
    Layout = "~/Views/Shared/kutuphaneLayout.cshtml";
}

<h2>YAZAR : @ViewBag.yzr</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>KATEGORİ</th>
        <th>YAYINEVİ</th>
    </tr>


    <tbody>
     @foreach(var x in Model)
     {
         <tr>
             <td>@x.ID</td>
             <td>@x.AD</td>
             <td>@x.TBLKATEGORI.AD</td>
             <td>@x.YAYINEVI</td>
         </tr>
     }
    </tbody>
</table>

