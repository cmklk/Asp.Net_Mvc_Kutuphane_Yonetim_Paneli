<!-- body starts -->
<body>
    <!-- section -->
    <section class="register">
        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <div class="logo">
                        <a href="#"><span class="fa fa-graduation-cap" aria-hidden="true"></span></a>
                    </div>
                    <h1>MV5 KÜTÜPHANE YÖNETİM SİSTEMİ</h1>
                    <p>
                       Kütüphanemize hoşgeldiniz kayıt olmak için sağ tarafta bulunan paneldeki bilgileri eksiksiz bir şekilde girerek kaydınızı gerçekleştirebilirsiniz.
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="/Login/girisYap">Giriş Yap</a></li>
                            <li><a class="read" href="/Vitrin/Vitrin">Siteye Dön</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <h2><span class="fa fa-pencil"></span> register here</h2>
                    <div class="register-form">
                        @using (Html.BeginForm("kayit", "register", FormMethod.Post))
                        {
                            <div class="fields-grid">
                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="AD" required="">
                                    <label>ADINIZ</label>
                                    <span></span>
                                </div>


                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="SOYAD" required="">
                                    <label>SOYADINIZ</label>
                                    <span></span>
                                </div>

                                <div class="styled-input">
                                    <input type="email" name="MAIL" required="">
                                    <label>Email</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="text" name="KULLANICIADI" required="">
                                    <label>KULLANICI ADINIZ</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="password" name="SIFRE" required="">
                                    <label>ŞİFRE</label>
                                    <span></span>
                                </div>

                                <div class="styled-input">
                                    <input type="tel" name="TELEFON" required="">
                                    <label>TELEFON</label>
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    <select id="category2" name="OKUL" required="">
                                        <option value="">OKUL</option>
                                        <option value="">İSTANBUL AYDIN ÜNİVERSİTESİ</option>
                                        <option value="">İSTANBUL BİLGİ ÜNİVERSİTESİ</option>
                                        <option value="">İSTANBUL AREL ÜNİVERSİTESİ</option>
                                        <option value="">PİRİ REİS ÜNİVERSİTESİ</option>
                                        <option value="">İSTANBUL ÜNİVERSİTESİ</option>
                                        <option value="">BOĞAZİÇİ ÜNİVERSİTESİ</option>
                                        <option value="">ÖDTÜ ÜNİVERSİTESİ</option>
                                    </select>
                                    <span></span>
                                </div>
                                <div class="clear"> </div>
                                <label class="checkbox"><input type="checkbox" name="checkbox" checked><i></i>Şartları koşulları kabul ediyorum.</label>
                            </div>
                            <button class="btn btn-warning text-white">KAYIT OL</button>
                        }
                    </div>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2018 Course Register Form. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts</a></p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
</body>
<!-- //body ends -->
